{
  "devDependencies": {
    "lerna": "3.10.5",
    "npm-run-all": "4.1.5",
    "rimraf": "2.6.3"
  },
  "engines": {
    "node": ">=8.12.0",
    "npm": ">=6.4.1",
    "yarn": ">=1.12.3"
  },
  "name": "root",
  "private": true,
  "scripts": {
    "build": "lerna run --stream build",
    "ci": "yarn install && npm-run-all qa:1 ci:1 qa:3 test_dapps:ci cwtree",
    "ci:1": "npm run build -- --ignore embark-ui",
    "clean": "npx lerna run --parallel clean",
    "cwtree": "node scripts/check-working-tree",
    "globalize": "node scripts/globalize",
    "lint": "lerna run --parallel lint",
    "package": "lerna exec --concurrency=1 --stream npm pack",
    "qa": "npm run cwtree && npm run reboot:full && npm-run-all qa:* test_dapps:qa cwtree",
    "qa:1": "npm-run-all cwtree lint typecheck",
    "qa:2": "npm run build",
    "qa:3": "npm-run-all cwtree test cwtree package cwtree",
    "reboot": "npm run reset && yarn install",
    "reboot:full": "npm run reset:full && yarn install",
    "release": "node scripts/release",
    "release:prepare": "npm run cwtree && yarn install && npm run ci:1 && cd test_dapps && npm run release:prepare",
    "reset": "npx lerna run --parallel reset",
    "reset:full": "npm run reset && npx rimraf node_modules",
    "start": "lerna run --parallel start",
    "test": "lerna run --stream test",
    "test:full": "npm-run-all lint typecheck test test_dapps",
    "test_dapps": "cd test_dapps && yarn install && npm run test",
    "test_dapps:ci": "cd test_dapps && npm run ci",
    "test_dapps:qa": "cd test_dapps && npm run qa",
    "typecheck": "lerna run --parallel typecheck"
  },
  "workspaces": ["packages/*"]
}
